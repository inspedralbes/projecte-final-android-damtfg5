<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="OrangeCursorEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textCursorDrawable">@drawable/orange_cursor_drawable</item>
    </style>

    <style name="CalendarTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/naranja1</item>
    </style>

    <style name="FullScreenDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.8</item>
    </style>

    <style name="FullScreenDialogStyle2" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/background_light</item>
    </style>



</resources>